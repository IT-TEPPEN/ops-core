# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/opscore?sslmode=disable

# Encryption Configuration
# ENCRYPTION_KEY must be a 64-character hexadecimal string (32 bytes)
# Generate a random key with: openssl rand -hex 32
# IMPORTANT: Keep this key secret and secure. Changing this key will make all previously encrypted tokens unreadable.
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Logging Configuration
# Supported levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Server Configuration (optional)
PORT=8080
